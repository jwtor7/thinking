{
  "name": "thinking-monitor",
  "version": "0.13.0",
  "description": "Real-time monitoring dashboard for Claude Code thinking, agents, and tool activity",
  "type": "module",
  "main": "dist/server/index.js",
  "scripts": {
    "dev": "pnpm build:dashboard && node --watch --experimental-transform-types src/server/index.ts",
    "dev:watch": "pnpm build:dashboard --watch &  node --watch --experimental-strip-types src/server/index.ts",
    "build": "pnpm build:server && pnpm build:dashboard",
    "build:server": "node scripts/build-server.js",
    "build:dashboard": "esbuild src/dashboard/app.ts --bundle --format=iife --outfile=src/dashboard/app.js",
    "start": "pkill -f 'node dist/server/index.js' 2>/dev/null; node dist/server/index.js",
    "ship": "pnpm build && pkill -f 'node dist/server/index.js' 2>/dev/null; node dist/server/index.js &",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "screenshot": "scripts/screenshot-arc.sh",
    "version:patch": "scripts/bump-version.sh patch",
    "version:minor": "scripts/bump-version.sh minor",
    "version:major": "scripts/bump-version.sh major"
  },
  "keywords": [
    "claude-code",
    "monitoring",
    "dashboard",
    "anthropic"
  ],
  "author": "",
  "license": "UNLICENSED",
  "packageManager": "pnpm@10.26.1",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/ws": "^8.5.13",
    "esbuild": "^0.24.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16"
  }
}
